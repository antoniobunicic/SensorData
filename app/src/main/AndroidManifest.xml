<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fer.tel.ab46700.sensordata" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/proba3"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TemperatureActivity"
            android:label="@string/title_activity_temperature" >
        </activity>
        <activity
            android:name=".HumidityActivity"
            android:label="@string/title_activity_humidity" >
        </activity>
        <activity
            android:name=".LuminosityActivity"
            android:label="@string/title_activity_luminosity" >
        </activity>
        <activity
            android:name=".PresenceActivity"
            android:label="@string/title_activity_presence" >
        </activity>
        <activity
            android:name=".DoorActivity"
            android:label="@string/title_activity_door" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
